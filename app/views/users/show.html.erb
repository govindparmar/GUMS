<% provide(:title, "User Info") %>
<h1>User Profile for User #<%= @user.id %></h1>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<% if @viewed_org == @loggedin_org %>
			<p><b>Full Name:</b> <%= @user.full_name %></p>
			<p><b>Email Address:</b> <%= @user.email %></p>
			<p><b>Date of Birth:</b> <%= @user.date_of_birth %></p>
			<p><b>Phone Number:</b> <%= @user.phone_number %></p>
			<p><b>Admin Status:</b> <%= @user.is_admin %></p>
		<% else %>
			<p><b>You do not have permission to view this user's information; please log in as a member of this user's organization to view them.</b></p>
		<% end %>
	</div>
</div>
