<% provide(:title, "Admin Edit") %>
<h1>Editing User #<%= @user.id %></h1>
<% if is_admin_user? && @user.organization_id == @loggedin_org %>
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<%= form_for(@user) do |f| %>
				<%= render 'layouts/error_report' %>
		  
				<%= f.label :full_name, "Full Name" %>
				<%= f.text_field :full_name, class: 'form-control' %>

				<%= f.label :email %>
				<%= f.email_field :email, class: 'form-control' %>
	
				<%= f.label :phone_number, "Phone Number" %>
				<%= f.text_field :phone_number, class: 'form-control' %>
		  
				<%= f.label :date_of_birth, "Date of Birth (YYYY-MM-DD)" %>
				<%= f.text_field :date_of_birth, class: 'form-control' %>
		  
				<%= f.submit "Save changes", class: "btn btn-primary" %>
			<% end %>
		</div>
	</div>
		
<% else %>
	<p><b>Access is denied.</b></p>
<% end %>