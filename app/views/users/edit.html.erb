<% provide(:title, "Edit User") %>
<h1>Edit User</h1>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@user) do |f| %>
		  <%= render 'layouts/error_report' %>
		  <p><b>Note: to change or copy your profile across organizations, use the "Copy to organization..." and "Move to organization..." links under your profile page, and then sign in specifying the desired organization.</b></p>

		  <%= f.label :full_name, "Full Name" %>
		  <%= f.text_field :full_name, class: 'form-control' %>

		  <%= f.label :email %>
		  <%= f.email_field :email, class: 'form-control' %>
	
		  <%= f.label :phone_number, "Phone Number" %>
		  <%= f.text_field :phone_number, class: 'form-control' %>
		  
			<%= f.label :date_of_birth, "Date of Birth (YYYY-MM-DD)" %>
			<%= f.text_field :date_of_birth, class: 'form-control' %>
		  
		  <%= f.label :password %>
		  <%= f.password_field :password, class: 'form-control' %>

		  <%= f.label :password_confirmation, "Confirmation" %>
		  <%= f.password_field :password_confirmation, class: 'form-control' %>

		  <%= f.submit "Save changes", class: "btn btn-primary" %>
		<% end %>
		<p><%= link_to "Copy To Organization...", '/users/' + @user.id.to_s + '/copyuser' %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to "Move To Organization...", '/users/' + @user.id.to_s + '/moveuser' %></p>
		
	</div>
</div>